@model List<CRUDCORE.Models.EmpresaModel>

@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Lista Empresa
    </div>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="Mantenedor" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
        <hr />
        <<table class="table table-bordered">
            <thead>
                <tr>
                    <th>Cif</th>
                    <th>Nombre</th>
                    <th>Telefono</th>
                    <th>Localidad</th>
                    <th>Provincia</th>
                    <th>Direccion</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Cif</td>
                        <td>@item.Nombre</td>
                        <td>@item.Telefono</td>
                        <td>@item.Localidad</td>
                        <td>@item.Provincia</td>
                        <td>@item.Direccion</td>
                        <td>
                            <a asp-action="Editar" asp-controller="Mantenedor" class="btn btn-primary btn-sm" asp-route-Cif="@item.Cif">Editar</a>
                            <a asp-action="Eliminar" asp-controller="Mantenedor" class="btn btn-danger btn-sm" asp-route-Cif="@item.Cif">Eliminar</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

